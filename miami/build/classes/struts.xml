<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<!-- Strutsの詳細設定 -->
<struts>
	<constant name="struts.devMode" value="true" />
	<!-- 対象のpackageを設定 -->
	<package name="com.internousdev.miami.action" extends="struts-default">

		<!-- ProductInfoAction -->
		<action name="ProductInfoAction" class="com.internousdev.miami.action.ProductInfoAction" method="execute">
			<result name="success">productInfo.jsp</result>
		</action>

		<!-- ProductInfoDescriptionAction -->
		<action name="ProductInfoDescriptionAction" class="com.internousdev.miami.action.ProductInfoDescriptionAction" method="execute">
			<result name="success">productInfoDescription.jsp</result>
		</action>

	</package>
</struts>