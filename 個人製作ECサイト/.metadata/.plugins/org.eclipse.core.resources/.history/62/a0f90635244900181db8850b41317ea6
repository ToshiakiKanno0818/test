package com.internousdev.products.action;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.products.dao.ProductAllDAO;
import com.internousdev.products.dto.ProductAllDTO;
import com.internousdev.products.dto.ProductDTO;
import com.opensymphony.xwork2.ActionSupport;

public class GoProductsAllAction extends ActionSupport implements SessionAware {

//	商品情報取得DAO
	private ProductAllDAO productDAO = new ProductAllDAO();

//	商品情報格納DTO
	public ArrayList<ProductAllDTO> productAllList = new ArrayList<ProductAllDTO>();

	public Map<String, Object> session;


	public String execute() {

		String product_id = session.get("id").toString();

		productAllList = productDAO.getproductAllInfo(product_id);

		Iterator<ProductDTO> iterator = productAllList.iterator();

		return SUCCESS;
	}

	public Map<String, Object> getSession() {
		return this.session;
	}

	@Override
	public void setSession(Map<String, Object> session) {
		this.session = session;
	}
}
